<main>
<body>

    <p id="notice"></p>



  <div class="container">
  <div class="row">
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    <div class="col-md-3">




<%=render 'list', user: @user ,book: @book %>



<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody><tr>
          <td><%= link_to user_path(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <%end%>
            <%= link_to @book.user.name,(user_path(@book.user_id))  %>
          </td>
          <td><%= link_to @book.title,book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to "Destroy", book_path(@book.id),method: :delete,class:"btn btn-sm btn-danger destroy_book_#{@book.id}" ,date: {confirm: "本当にけしますか？"}%></td>
          <%end%>
        </tr>
      </tbody></table>
    </div>





</div>
