<main>
<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
  <%= @book.errors.count %><h3>1 error prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
